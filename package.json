{
  "name": "pegabot-rundenanmeldung",
  "version": "0.0.1",
  "main": "build/server.js",
  "author": "The Pegabot authors",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegabot/rundenanmeldung.git"
  },
  "engines": {
    "node": "14.x"
  },
  "workspaces": [
    "src",
    "ui"
  ],
  "private": "true",
  "scripts": {
    "dev": "nodemon .  --signal SIGINT",
    "build": "yarn build:ui; rm -rf build; tsc",
    "build:ui": "cd ui; yarn build",
    "start": "node .",
    "generateEnvTypes": "npx gen-env-types .env -o src/types/env.d.ts -e ."
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "find-config": "^1.0.0",
    "http-status-codes": "^2.1.4",
    "trello-node-api": "^0.0.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-rate-limit": "^5.1.2",
    "@types/find-config": "^1.0.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.2"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts",
      "ui/**/*.ts",
      "ui/**/*.tsx"
    ],
    "ignore": [
      "**/build/*"
    ],
    "ext": "ts,tsx",
    "exec": "yarn build --sourceMap; yarn start"
  }
}
