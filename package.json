{
  "name": "pegabot-rundenanmeldung",
  "version": "x.y.z",
  "main": "build/main.js",
  "author": "The Pegabot authors",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegabot/rundenanmeldung.git"
  },
  "engines": {
    "node": "14.x"
  },
  "workspaces": [
    "src",
    "ui"
  ],
  "private": "true",
  "scripts": {
    "dev": "nodemon .  --signal SIGINT",
    "build": "yarn build:ui; rm -rf build; tsc",
    "build:ui": "cd ui; yarn build",
    "start": "node .",
    "generateEnvTypes": "npx gen-env-types .env -o src/types/env.d.ts -e ."
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "imap-simple": "^5.0.0",
    "lodash": "^4.17.21",
    "mailparser": "^3.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/imap-simple": "^4.2.4",
    "@types/lodash": "^4.14.169",
    "@types/mailparser": "^3.0.2",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts",
      "ui/**/*.ts"
    ],
    "ignore": [
      "**/build/*"
    ],
    "ext": "ts",
    "exec": "yarn build --sourceMap; yarn start"
  }
}
